//
.landing
  img
    max-width 100%
  .video
    column(2/3, $cycle:2)
    iframe
      line-height 0
  .sidebar
    column(1/3, $cycle:2)
    h1
      text-transform uppercase
      color $link-color
      font-size 24px
      text-align center
  .other-videos
    margin-top 40px
    span()
    uncycle(2)
    &-thumb
      column(1/4, $cycle:4)
      height 145px
      a
        display inline-block
      img
        opacity .3
        transition 200ms all ease-in
      .svg-play
        position absolute
        text-align center
        left 0
        right 0
        top 45px
      h3
        text-align center
        color #fff
        font-weight 600
        margin-top -40px
        transition 200ms all ease-in
      &:hover
        img
          opacity .5

        