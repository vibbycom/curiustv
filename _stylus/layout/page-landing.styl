//
.landing
  img
    max-width 100%
  .vids-wrapper
    column(2/3, $cycle:2)
    margin-bottom 60px
    background #000
    +below($md)
      span($cycle:0)
      max-width 750px
      float none !important
      margin-left auto
      margin-right auto !important
    .video
      position relative
      height 0
      padding-bottom 56.25%
      iframe
      .bc-player
        line-height 0
        position absolute
        top 0
        left 0
        width 100%
        height 100%
      #createHighlightBtnDiv-vimeo-0
        position absolute
        width 100%
        bottom -55px
        top auto
      .vb-container.vb-v2
        bottom -60px
        position absolute
        top auto
        width 100%
            
  .sidebar
    column(1/3, $cycle:2)
    +below($md)
      display none
    h1
      text-transform uppercase
      color $link-color
      font-size 24px
      text-align center
  .other-vids
    margin-top 40px
    span()
    uncycle(2)
    &-thumb
      column(1/4, $cycle:4)
      height 145px
      +below($md)
        column(1/2, $cycle:2)
        height auto
        margin-bottom 20px
        text-align center
        +below($xs)
          span()
          text-align center
      a
        display inline-block
      img
        opacity .3
        transition 200ms all ease-in
      .svg-play
        position absolute
        text-align center
        left 0
        right 0
        top 45px
      h3
        text-align center
        color #fff
        font-weight 600
        margin-top -40px
        transition 200ms all ease-in
      &:hover
        img
          opacity .5
  &.comedy
    .sidebar
      h1
        text-transform uppercase
        color #fff
        font-size 24px
        text-align center
    .other-vids
      background #33424D
      padding-bottom 50px
      h2
        font-size 18px
        font-weight 600
        color #999
        text-transform uppercase
        margin 30px 0 20px


          