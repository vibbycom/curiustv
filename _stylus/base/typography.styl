//Typography

h1
    setType(10, $ms-up6)
    letter-spacing -0.3px
    font-weight 500
    +below($md)
        setType(8, $ms-up4)

h2
    setType(10, $ms-up6)
    font-weight 500
    +below($md)
        setType(8, $ms-up4)

h3
    setType(6, $ms-up2)
    font-weight 300
    +below($md)
        setType(5, $base-em-font-size)
        font-weight 400
    
h4
    setType(6, $ms-up1)
    font-weight 300
    +below($md)
        setType(4, $base-em-font-size)
        font-weight 400
        
h5
    setType(4, $ms-up1)
    font-weight 500
    
.text-center
    text-align center
    
.text-right
    text-align right

medium
    font-weight 500